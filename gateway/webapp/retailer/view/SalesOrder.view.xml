<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:form="sap.ui.layout.form" xmlns="sap.m" xmlns:semantic="sap.m.semantic" controllerName="com.sap.ESPM-UI.controller.SalesOrder"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App id="espmRetailerId">
		<pages>
		<Page navButtonPress="onNavBack" showNavButton="true" title="{i18n>sales.pageTitle}">
			<content>
				<SplitContainer id="splitContId">
					<masterPages>
						<Page id="masterPageId" title="{i18n>sales.masterPageTitle}">
							<subHeader>
								<Bar id="searchBar">
									<contentMiddle>
										<SearchField id="searchField" placeholder="{i18n>sales.masterSearchPlaceholder}" search="handleSearch" showRefreshButton="{device>/isNoTouch}"
											tooltip="{i18n>sales.masterSearchTooltip}" width="100%"></SearchField>
									</contentMiddle>
								</Bar>
							</subHeader>
							<content>
								<List updateFinished="listUpdateFinished" growing="true" growingScrollToLoad="true" id="list" 
									items="{path: 'customer>/salesorders/data'}" 
									mode="" noDataText="{i18n>sales.masterListNoDataText}" select="onSelect">
									<items>
										<ObjectListItem press="handleListItemPress" type="Active" 
											numberUnit="{customer>currencyCode}" 
											number="{path: 'customer>grossAmount'}" 
											title="{customer>salesOrderId}" 
											>
											<firstStatus>
												<ObjectStatus
													text="{customer>lifecycleStatusName}"
													status="Success" />
											</firstStatus>
										</ObjectListItem>
									</items>
								</List>
							</content>
							<footer>
								<Toolbar></Toolbar>
							</footer>
						</Page>
					</masterPages>
					<detailPages>
						<Page id="detailPageId" title="{i18n>sales.detailPageTitle}" showNavButton="{device>/isPhone}" navButtonPress="handleNavButtonPress">
							<ObjectHeader id="detailObjectHeader" title="{sales>/salesOrderId}" number="{path: 'sales>/grossAmount'}" numberUnit="{sales>/currencyCode}" > 
								<attributes> <ObjectAttribute text="{customer>/customer/customerId}" /> <ObjectAttribute text="{path: 'sales>/createdAt'}" /><ObjectAttribute  text="{path: 'sales>/lifecycleStatusName'}" />
								</attributes> 
								 
							</ObjectHeader>
							<IconTabBar expanded="true" > 
								<items> 
									<IconTabFilter icon="sap-icon://supplier"> 
										<form:SimpleForm id="customerForm" minWidth="1024" > 
											<core:Title text="{i18n>sales.address}" /> 
											<Label text="{i18n>sales.customerName}"/> 
											<Text text="{customer>/customer/firstName} {customer>/customer/lastName}" /> 
											<Label text="{i18n>sales.email}"/> 
											<Text text="{customer>/customer/emailAddress}"/> 
											<Label text="{i18n>sales.street}"/> 
											<Text text="{customer>/customer/street}" /> 
											<Label text="{i18n>sales.city}"/> 
											<Text text="{customer>/customer/city}, {customer>/customer/postalCode}" /> 
											<Label text="{i18n>sales.country}"/> 
											<Text text="{customer>/customer/country}" /> 
										</form:SimpleForm> 
									</IconTabFilter> 
								</items> 
							</IconTabBar>
							<Table id="lineItemsId" headerText="{i18n>sales.lineItemTableHeader}" > 
								<columns> 
									<Column> <header><Label text="{i18n>sales.lineItemTitle}" /></header> </Column> 
									<Column minScreenWidth="Tablet" demandPopin="true" hAlign="Center" > <header><Label text="Quantity" /></header> </Column> 
									<Column hAlign="Right" > <header><Label text="Price" /></header> </Column> 
								</columns> 
								<ColumnListItem id="columnListLineItem" type="Navigation" > 
									<cells> 
										<ObjectIdentifier title="{sales>/productId}" /> 
										<Text text="{sales>/quantity}"/> 
										<ObjectNumber number="{sales>/grossAmount}" numberUnit="{sales>/currencyCode}" /> 
									</cells> 
								</ColumnListItem> 
							</Table>
							<footer> 
								<Bar> 
									<contentRight> 
										<Button id="approveButtonId" text="{i18n>sales.ApproveButtonText}" type="Accept" icon="sap-icon://accept" press="handleApprove" />
										<Button text="{i18n>sales.RejectButtonText}" type="Reject" icon="sap-icon://reject" press="handleReject" /> 
									</contentRight> 
								</Bar> 
							</footer>
						</Page>
						</detailPages>
						</SplitContainer>
						</content>
						</Page>
		</pages>
	</App>
</mvc:View>